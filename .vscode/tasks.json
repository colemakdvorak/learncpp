{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-ggdb", // Debugging
                //"-O2", // Release
                //"-DNDEBUG",
                "-pedantic-errors",
                "-Werror", // Warnings -> Errors
                "-std=c++20", // Language standard
                "${file}",
                "02_multifile_sep.cpp",
                "-o",
                "${fileDirname}/compiled/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
